<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/binLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Bin" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/binSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/binLabel"
        android:layout_alignStart="@+id/wholeFoodSwitch"
        android:textOff="OFF"
        android:textOn="ON" />

    <!--<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/binLabel"
        android:background="#FF909090" />-->

    <TextView
        android:id="@+id/dropOffLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/binLabel"
        android:layout_alignStart="@id/binLabel"
        android:layout_below="@+id/binLabel"
        android:layout_marginTop="30dp"
        android:text="Drop-Off" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/dropOffSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dropOffLabel"
        android:layout_alignStart="@+id/binSwitch"
        android:textOff="OFF"
        android:textOn="ON" />

    <!--<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF909090"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/dropOffLabel"
        android:layout_alignParentStart="true" />-->

    <TextView
        android:id="@+id/wholeFoodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dropOffLabel"
        android:layout_below="@+id/dropOffSwitch"
        android:layout_marginTop="30dp"
        android:text="Whole Foods" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/wholeFoodSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wholeFoodLabel"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/wholeFoodLabel"
        android:textOff="OFF"
        android:textOn="ON" />

</RelativeLayout>
