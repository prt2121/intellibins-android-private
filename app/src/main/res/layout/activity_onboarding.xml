<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pt2121.envi.ui.OnboardingActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/onboardingViewPager"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.pt2121.envi.view.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skipButton"
        android:background="@android:color/transparent"
        android:fillColor="@android:color/white"
        android:padding="10dip"
        app:pageColor="@android:color/transparent"
        app:radius="5dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="320dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/lets_start_background"
        android:text="@string/lets_get_started"
        android:textColor="@drawable/lets_start_text_color" />

</RelativeLayout>
